<div class="container">

<h1 class="message-bienvenue"> Bienvenue dans le longestword game !</h1>
<ul>
<% @grid.each do |character| %>
<li> <%=character%></li>
<%end%>
</ul>

<form action="/score" method="get">
  <label for="question">Which word can you type?</label>
  <input type="text" id="question" name="query" placeholder="Type a word">
  <input type="submit" value="Submit!">
  <input type="hidden" name="wordgrid" value=<%=@grid.join(",").tr(',','')%>/>

</form>
</div>
